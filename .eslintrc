{
  "extends": "airbnb-base",
  "env": {
      "browser": true,
      "node": true,
      "jest": true
  },
  "rules": {
    // "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-underscore-dangle":
    ["error",
      { "allow": ["_id"] },
      {"allowAfterThisConstructor": true },
      { "allowForLoopAfterthoughts": true }
    ],
    "no-console": ["off"],
    "global-require": 0,
    "no-restricted-globals": ["error", "event", "fdescribe"]
  }
}
